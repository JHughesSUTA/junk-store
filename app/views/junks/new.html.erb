<h3>Add Junk!</h3>
<%= form_tag '/junks', method: :post do %> 
  <div>
    <%= label_tag :name %> 
    <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :description %> 
    <%= text_field_tag :description %>
  </div>
  <div>
    <%= label_tag :image %> 
    <%= text_field_tag :image %>
  </div>
  <%= submit_tag 'Add Junk' %>
<% end %>